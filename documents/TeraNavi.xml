<Context
    path="/diary"
    reloadable="true"
    docBase="C:\GitHub\myapps\Diary">
    <Resource
        name="jdbc/info"
        auth="Container"
        type="javax.sql.DataSource"
        username="info"
        password="pro"
        driverClassName="oracle.jdbc.driver.OracleDriver"
        url="jdbc:oracle:thin:@localhost:1521:orcl"
        maxActive="5"
        maxIdle="5"
        maxWait="10000"
        removeAbandoned="true"
        removeAbandonedTimeout="60"
        logAbandoned="true"/>
</Context>
